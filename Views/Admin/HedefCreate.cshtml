@model PolyteksEnerjiYonetimSistemi.Models.Hedefler

@{
    ViewBag.Title = "HedefCreate";
    Layout = null;
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
      


            <div class="card">
                <div class="card-header" style="background-color:grey">
                    <h4 style="color:black">YENİ HEDEF EKLEME</h4>
                </div>
                <div class="card-body"  style="background-color:lightsteelblue">

                    <div class="row">
                        <div class="col-sm-6">


                            <b>@Html.LabelFor(model => model.Yil, "YIL", htmlAttributes: new { @class = "control-label col-md-12" })</b>

                            @Html.EditorFor(model => model.Yil, new { htmlAttributes = new { @class = "form-control", min = 1986, max = 2100 }, required = "required" })
                        </div>


                        <div class="col-sm-6">
                            <b>@Html.LabelFor(model => model.Ay, "AY", htmlAttributes: new { @class = "control-label col-md-12" })</b>  

                            @Html.EditorFor(model => model.Ay, new { htmlAttributes = new { @class = "form-control", min = 1, max = 12 } ,required= "required" })


                        </div>

                    </div>


                    <div class="row">


                      
                                <div class="col-sm-6">
                                    <b> @Html.LabelFor(model => model.HedefDeger, "HEDEF DEĞER", htmlAttributes: new { @class = "control-label col-md-12" })</b>  

                                    @Html.EditorFor(model => model.HedefDeger, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Lütfen virgülle değer giriniz!!!" } })

                                </div>

                                <div class="col-sm-6">
                                    <b> @Html.LabelFor(model => model.BolumId, "BÖLÜM", htmlAttributes: new { @class = "control-label col-md-12" })</b> 

                                    @Html.DropDownList("BolumId", null,"SEÇİNİZ" ,htmlAttributes: new { @class = "form-control" })

                                </div>
                         
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12">
                            <input type="submit" value="YENİ HEDEF OLUŞTUR" class="btn btn-success" />
                        </div>
                    </div>
                </div>
                </div>
                </div>
}


