@model IEnumerable<PolyteksEnerjiYonetimSistemi.Models.AylikUretimVerileri>

@{
    ViewBag.Title = "AylikUretimIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<div class="container">
    <center><h2><b>AYLIK ÜRETİM LİSTESİ</b></h2></center>
    <center>
        <input type="button" id="btn1" value="YENİ ÜRETİM EKLE" class="btn btn-primary btn-sm" onclick="beklemeAnimasyonu()" color:white />
        <div id="result1"></div>
    </center>
</div>




<script type="text/javascript">
    $(document).ready(function () {
        $('#btn1').click(function () {
            $('#result1').load('/Admin/AylikUretimCreate');
        });
    });

</script>

<div class="container center">

    <table class="table table-bordered table-primary table-striped table-responsive-sm table-hover">
        <tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Yil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AylikMiktar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bolumler.Bolum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KayitEden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KayitTarihi)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Yil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ay)
                </td>
                <td>
                    @String.Format("{0:n2}", item.AylikMiktar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bolumler.Bolum)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.KayitEden)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.KayitTarihi)
                </th>
                <td>

                    <center>

                        <a href="@Url.Action("AylikUretimEdit", "Admin", new { id = item.ID })" title="DÜZENLE" class="btn btn-primary py-0"> <i class="fa fa-pencil">   </i></a>
                    </center>

                </td>
                <td>
                    <center>
                        <a href="@Url.Action("AylikUretimDelete", "Admin",new { id = item.ID })" title="SİL" class="btn btn-danger py-0"> <i class="fa fa-trash" aria-hidden="true">  </i></a>
                    </center>
                </td>
            </tr>
        }

    </table>
</div>


<style>
    .center {
        text-align: center;
        margin: auto;
        width: 50%;
        padding: 10px;
        display: flex;
    }
</style>