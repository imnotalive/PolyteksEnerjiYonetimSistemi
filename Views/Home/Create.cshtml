@model PolyteksEnerjiYonetimSistemi.Models.Makine

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <div class="form-horizontal">
        <h4>Makine</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h2>Index</h2>
        @Html.DropDownList("Model", ViewBag.id_modelos as SelectList, "Seleccione un modelo...")
        <script>
$('#Model').change(function () {
    var selected = $(this).val(); // get selected value from dropdown

    var targetUrl = '@Url.Action("GetResults", "Home")';
    var param = { id: selected };

    $.ajax({
        url: targetUrl,
        type: 'GET',
        data: param,
        dataType: 'json',
        success: function (response) {
            var row = '';

            // this part depends on JSON structure, here is just an example
            $.each(response, function(i, value) {
                row += '<tr><td>' +'asads' + '</td></tr>'; // build table rows with each column values
            },

            // use append() to add new rows, or html() to replace existing rows
            $('#grid tbody').html(row));
        }
    });
});</script>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

